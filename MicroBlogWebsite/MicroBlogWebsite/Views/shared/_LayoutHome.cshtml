    <link href="~/Content/css/LayoutHomeStyle.css" rel="stylesheet" />
    @RenderSection("head", required: true)  @*View页面自定义特定js/css使用*@

    <style type="text/css">
        .logo img {
            /*display:block;*/
            width: 150px;
            height: 49px;
        }
    </style>
</head>
<body>
    @* 上导航栏 *@
    <div id="navDiv" class="navDivBox">
        <nav class="nav-site">
            <ul class="nav-site-ul">
                <li class="">  <a href="/Access/Default" class="logo"><img src="~/Content/images/LayoutHome/talanglogo.png" /></a>  @*@Html.ActionLink("首页", "Default", "Access")*@</li>
