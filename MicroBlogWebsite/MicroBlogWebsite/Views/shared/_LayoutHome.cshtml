                <li>@Html.ActionLink("账户设置", "", new { }, new { @class = "navli" })</li>
                @*<li>@Html.ActionLink("登录", "Login","Access")/@Html.ActionLink("注册", "Register","Access")</li>*@

                @* 登录之后显示退出按钮 *@
                <li>@Html.ActionLink("退出", "Default", "Access", new { }, new { @class = "navli" })</li>
            </ul>
        </nav>
    </div>

    @* 下导航栏，登录之后才显示 *@
    <div id="navUserDiv">
        <nav class="nav-site-user">
            <ul class="nav-siteuser-ul">
                <li>@Html.ActionLink("我的主页", "", new { id = "navUserli" }, new { @class = "navUserli" })</li>
                <li>@Html.ActionLink("我的微博", "Mymicrobolg", "Home", new { }, new { @class = "navUserli" })</li>
                <li>@Html.ActionLink("我的好友", "Myfriendlist", "Home", new { }, new { @class = "navUserli" })</li>
                <li>
                    @*@Html.TextBoxFor("搜索"){}*@<input type="text" placeholder="搜索" style="border:1px solid #808080;border-radius:8px;width:180px;height:30px;font-size:18px;" />&nbsp;&nbsp;
                <button style="width: 50px; height: 30px; border-radius: 8px;cursor:pointer">搜索</button>&nbsp;&nbsp;&nbsp;&nbsp;
            </li>
        </ul>
    </nav>
</div>



<div>
    @RenderBody()
</div>


